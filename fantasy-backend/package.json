{
  "name": "fantasy-backend",
  "version": "1.0.0",
  "description": "Production-ready Fantasy App Backend (Node.js + TypeScript)",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=ict ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "seed": "npx ts-node src/scripts/seed.ts",
    "seed1": "npx ts-node src/seed/players.ts",
    "lint": "eslint . --ext .ts",
    "bullmq": "npm list bullmq",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop fantasy-backend",
    "pm2:restart": "pm2 restart fantasy-backend",
  },
  "dependencies": {
    "@bull-board/api": "^6.16.2",
    "@bull-board/express": "^6.16.2",
    "bullmq": "^5.66.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "google-auth-library": "^9.9.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.0",
    "morgan": "^1.10.1",
    "node-cron": "^3.0.3",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^9.0.1",
    "socket.io": "^4.8.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "winston": "^3.19.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.12.12",
    "@types/swagger-ui-express": "^4.1.6",
    "cross-env": "^7.0.3",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.5.3"
  }
}
